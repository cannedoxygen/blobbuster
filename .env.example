# ================================
# BLOCKBUSTER ENVIRONMENT VARIABLES
# ================================

# Node Environment
NODE_ENV=development

# ================================
# SUI BLOCKCHAIN CONFIGURATION
# ================================

# Sui RPC endpoint (testnet, devnet, or mainnet)
SUI_RPC_URL=https://fullnode.testnet.sui.io:443
SUI_NETWORK=testnet

# Platform wallet private key (base64 encoded)
SUI_PRIVATE_KEY=your_private_key_here

# Deployed package IDs (get these after deploying contracts)
MEMBERSHIP_PACKAGE_ID=0x...
REVENUE_POOL_PACKAGE_ID=0x...
CONTENT_REGISTRY_PACKAGE_ID=0x...

# Shared object IDs (get these after initialization)
MEMBER_REGISTRY_OBJECT_ID=0x...
REVENUE_POOL_OBJECT_ID=0x...
CONTENT_REGISTRY_OBJECT_ID=0x...
ADMIN_CAP_OBJECT_ID=0x...

# ================================
# DATABASE CONFIGURATION
# ================================

# PostgreSQL
DATABASE_URL=postgresql://blockbuster:password@localhost:5432/blockbuster_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=blockbuster_db
DB_USER=blockbuster
DB_PASSWORD=password
DB_SSL=false

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ================================
# WALRUS STORAGE (Mainnet Live - March 2025)
# ================================

# Testnet endpoints (public, rate-limited):
WALRUS_PUBLISHER_URL=https://publisher.walrus-mainnet.walrus.space
WALRUS_AGGREGATOR_URL=https://aggregator.walrus-mainnet.walrus.space

# Mainnet endpoints (require API key from Walrus providers):
# WALRUS_PUBLISHER_URL=https://publisher.walrus-mainnet.walrus.space
# WALRUS_AGGREGATOR_URL=https://aggregator.walrus-mainnet.walrus.space

# API Key (required for mainnet publishers, optional for testnet)
WALRUS_API_KEY=your_walrus_api_key_here_for_mainnet

# Storage duration (1 epoch ≈ 30 days, default: 12 epochs ≈ 1 year)
WALRUS_DEFAULT_EPOCHS=520

# Permanent storage (true = cannot delete, false = deletable)
WALRUS_PERMANENT_STORAGE=true

# ================================
# BACKEND API CONFIGURATION
# ================================

# Server
PORT=3001
API_BASE_URL=http://localhost:3001

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=1d

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# FRONTEND CONFIGURATION
# ================================

NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_SUI_RPC_URL=https://fullnode.testnet.sui.io:443
NEXT_PUBLIC_MEMBERSHIP_PACKAGE=0x...
NEXT_PUBLIC_MEMBER_REGISTRY=0x...
NEXT_PUBLIC_REVENUE_POOL=0x...
NEXT_PUBLIC_CONTENT_REGISTRY=0x...

# ================================
# VIDEO PROCESSING
# ================================

# FFmpeg paths
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Transcoding settings
TRANSCODE_QUALITY_480P=true
TRANSCODE_QUALITY_720P=true
TRANSCODE_QUALITY_1080P=true
TRANSCODE_QUALITY_4K=true

# Upload limits
MAX_FILE_SIZE=10737418240
UPLOAD_DIR=/tmp/uploads
TRANSCODE_DIR=/tmp/transcoded

# Keep transcoded files for reuse (development only - saves transcoding time)
# Set to 'true' to keep files, 'false' or omit to clean up after upload
SKIP_UPLOAD_CLEANUP=true

# ================================
# EXTERNAL SERVICES
# ================================

# TMDB (The Movie Database) - Metadata Enrichment
# Get free API key at: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here
TMDB_READ_TOKEN=your_tmdb_read_token_here

# Email (SendGrid, Mailgun, etc.)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=
EMAIL_FROM=noreply@blockbuster.app

# Monitoring (Sentry)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Analytics
ANALYTICS_ENABLED=true

# ================================
# REVENUE DISTRIBUTION
# ================================

# Cron schedule (Sunday 2:00 AM UTC)
REVENUE_CRON_SCHEDULE=0 2 * * 0
REVENUE_DISTRIBUTION_ENABLED=true

# ================================
# SECURITY
# ================================

# Session
SESSION_SECRET=your_session_secret_here

# HTTPS (production)
SSL_CERT_PATH=
SSL_KEY_PATH=
