{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build --workspace=@blobbuster/backend"
  },
  "deploy": {
    "startCommand": "npm run start --workspace=@blobbuster/backend",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
